    <section class="cta-btn flex gap-8 items-center">
        <a href="#" class="login-btn hover:text-Almost-Black active:text-Almost-Black">Login</a>
        <a href="#" class="register-btn py-1 px-4 border-2 border-x-Medium-Gray rounded-lg hover:text-Almost-Black active:text-Almost-Black">Register</a>
    </section>
